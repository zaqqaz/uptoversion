{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": false,
    "allowJs": false,
    "outDir": "dist",
    "lib": [
      "es2018"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ]
}
